<div class="row mt-4">
  <div class="mb-3">
    <%= form_for(chore) do |f| %>
      <% if chore.errors.any? %>
        <div class="alert alert-warning col-lg-6" id="error_explanation">
          <h2><%= pluralize(chore.errors.count, "error") %> prohibited this chore from being saved:</h2>

          <ul>
          <% chore.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-label col-lg-4">
        <%= f.label :children %>
      </div>
      <div class="form-control-sm col-lg-4">
        <%= f.collection_check_boxes :child_ids, current_parent.children, :id, :name do |b| %>
          <div class="collection-check-box">
            <%= b.check_box %>
            <%= b.label %>
          </div>
        <% end %>
      </div>

      <div class="form-label col-lg-4">
        <%= f.label :job %>
      </div>
      <div class="form-control-sm col-lg-4">
        <%= f.text_field :job %>
      </div>

      <div class="form-label col-lg-4">
        <%= f.label :description %>
      </div>
      <div class="form-control-sm col-lg-4">
        <%= f.text_area :description %>
      </div>

      <div class="actions m-3 col-lg-4">
        <button type="button" class="btn">
          <%= f.submit %>
        </button>
      </div>
    <% end %>

  </div>
</div>
