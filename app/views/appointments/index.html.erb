<p id="notice"><%= notice %></p>

<h1>Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Start time</th>
      <th>Chore</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.start_time %></td>
        <td><%= appointment.chore_id %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-4">

    <%= month_calendar(events: @appointments) do |date, appointments| %>
      <%= date %>

      <% appointments.each do |appointment| %>
        <div>
          <%= appointment.chore.job %>
        </div>
      <% end %>

    <% end %>

</div>

<br>

<%= link_to 'New Appointment', new_appointment_path %>
