          </ul>
          <span class="navbar-text">A Chores App for Kids!</span>
        <%# <form class="d-flex">
          <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form> %>
      </div>
    </div>
  </nav>

  <p class="text-success" id="notice"><%= notice %></p>

  <div class="container-sm row">
    <h2 class="row px-4 text-warning">Children</h2>
  </div>

  <div class="row">
    <table class="table table-striped table-hover table-bordered shadow-sm">
      <thead>
        <tr class="table-dark text-center">
          <th>Name</th>
          <th>Age</th>
          <th>Chore(s)</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @children.each do |child| %>
          <tr class="text-center">
            <td><%= child.name %></td>
            <td><%= child.age %></td>
            <td class="mark">
              <% if child.chores.present? %>
                <div class="dropdown">
                  <%= render partial: 'chores/convert2', locals: { chores: child.chores } %>
                </div>
              <% end %>
            </td>
            <td>
              <div class="btn-group text-decoration-none">
                <button type="button" class="btn btn-warning text-decoration-none"><%= link_to 'View', child %></button>
                <button type="button" class="btn btn-warning dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                  <span class="visually-hidden">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu">
                  <li><a class="dropdown-item text-decoration-none" href="#"><%= link_to 'Edit', edit_child_path(child) %></a></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><a class="dropdown-item text-decoration-none" href="#"><%= link_to 'Delete', child, method: :delete, data: { confirm: 'Are you sure?' } %></a></li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div> <!--/row-->

