<div class="container-sm row">
  <h2 class="row mx-auto text-warning shadow-sm">Children</h2>
</div>

<% if !current_parent.children.empty? %>

<div class="row table-div">
  <table class="table table-striped table-hover table-bordered shadow-sm">
    <thead>
      <tr class="table-dark text-center">
        <th>Name</th>
        <th>Age</th>
        <th>Chore(s)</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% current_parent.children.each do |child| %>
        <tr class="text-center table-row">
          <td><%= child.name %></td>
          <td><%= child.age %></td>
          <td class="mark">
            <% if child.chores.present? %>
              <div class="dropdown">
                <%= render partial: 'chores/convert2', locals: { chores: child.chores } %>
              </div>
            <% end %>
          </td>
          <td>
            <div class="btn-group text-decoration-none dropdown">
              <button type="button" class="btn btn-warning text-decoration-none"><%= link_to 'View', child %></button>
              <button type="button" class="btn btn-warning dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="visually-hidden">Toggle Dropdown</span>
              </button>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item text-decoration-none" href="#"><%= link_to 'Edit', edit_child_path(child) %></a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item text-decoration-none" href="#"><%= link_to 'Delete', child, method: :delete, data: { confirm: 'Are you sure?' } %></a></li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div> <!--/row-->

<% else %>

<div class='row mx-auto text-center'>
  <p class='mx-auto text-dark'>No Current Children</h2>
</div>

<% end %>
